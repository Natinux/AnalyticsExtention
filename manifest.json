{
    "name": "Analytics",
    "version": "0.0.1",
    "manifest_version": 2,
    "description":"Google analytics viewer.",
    "icons":{
        "16": "icons/16x16.png",
        "19": "icons/19x19.png",
        "38": "icons/38x38.png",
        "48": "icons/48x48.png",
        "128": "icons/128x128.png"
    },
    "options_page": "options.html",
    "browser_action":{
    	"default_icon":{
    		"19": "icons/19x19.png",
    		"38": "icons/38x38.png"
    	},
    	"default_title": "Google Analytics",
    	"default_popup": "popup.html"
    },
    "background":{
    	"scripts": ["background.js"],
    	"persistent": true
    },
    "content_scripts":[{
    	"matches": ["http://*/*", "https://*/*"],
    	"js": ["content.js"]
    }],
    "permissions":[
        "webNavigation",
    	"webRequest",
    	"webRequestBlocking",
    	"*://*.google.com/analytics/*",
        "tabs"
    ]
}